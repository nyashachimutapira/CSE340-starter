<section class="error-view" role="alert">
  <h1><%= title %></h1>
  <% if (typeof statusCode !== 'undefined' && statusCode) { %>
    <p class="error-code">Status Code: <strong><%= statusCode %></strong></p>
  <% } %>
  <p class="error-message"><%= message || "An error occurred" %></p>
  <p>
    <a class="btn" href="/">Return to safety</a>
  </p>
</section>

