<div class="profile-container">
  <div class="profile-header">
    <h1><%= account.account_firstname %> <%= account.account_lastname %></h1>
    <p class="account-email"><%= account.account_email %></p>
    <div class="account-type-badge">
      <span class="badge badge-<%= account.account_type.toLowerCase() %>">
        <%= account.account_type %>
      </span>
    </div>
  </div>

  <% if (profile && profile.profile_picture) { %>
    <div class="profile-picture-section">
      <img src="<%= profile.profile_picture %>" alt="<%= account.account_firstname %>'s profile picture" class="profile-picture">
    </div>
  <% } %>

  <div class="profile-content">
    <div class="profile-section">
      <h2>Profile Information</h2>
      <table class="profile-table">
        <tr>
          <td class="label">Name:</td>
          <td><%= account.account_firstname %> <%= account.account_lastname %></td>
        </tr>
        <tr>
          <td class="label">Email:</td>
          <td><%= account.account_email %></td>
        </tr>
        <tr>
          <td class="label">Account Type:</td>
          <td><span class="badge badge-<%= account.account_type.toLowerCase() %>"><%= account.account_type %></span></td>
        </tr>
        <tr>
          <td class="label">Member Since:</td>
          <td><%= new Date(account.created_at).toLocaleDateString() %></td>
        </tr>
      </table>
    </div>

    <% if (profile) { %>
      <div class="profile-section">
        <h2>Additional Information</h2>
        
        <% if (profile.bio) { %>
          <div class="profile-item">
            <h3>Bio</h3>
            <p><%= profile.bio %></p>
          </div>
        <% } else { %>
          <div class="profile-item empty">
            <p>No bio added yet</p>
          </div>
        <% } %>

        <% if (profile.phone_number) { %>
          <div class="profile-item">
            <h3>Phone</h3>
            <p><%= profile.phone_number %></p>
          </div>
        <% } else { %>
          <div class="profile-item empty">
            <p>No phone number provided</p>
          </div>
        <% } %>

        <% if (profile.address) { %>
          <div class="profile-item">
            <h3>Address</h3>
            <p><%= profile.address %></p>
          </div>
        <% } else { %>
          <div class="profile-item empty">
            <p>No address provided</p>
          </div>
        <% } %>

        <p class="profile-updated">Last updated: <%= new Date(profile.updated_at).toLocaleDateString() %></p>
      </div>
    <% } %>
  </div>

  <div class="profile-actions">
    <a href="/account/profile/edit" class="btn btn-primary">Edit Profile</a>
    <a href="/account/" class="btn btn-secondary">Back to Account</a>
  </div>
</div>

