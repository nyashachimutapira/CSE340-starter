<div class="confirmation-container">
  <div class="confirmation-header">
    <div class="confirmation-badge">âœ“</div>
    <h1>Order Confirmed!</h1>
    <p>Thank you for your purchase</p>
  </div>

  <!-- Flash Messages -->
  <% if (notices && notices.length) { %>
    <div class="alert alert-notice">
      <% notices.forEach(notice => { %>
        <p><%= notice %></p>
      <% }); %>
    </div>
  <% } %>

  <% if (errors && errors.length) { %>
    <div class="alert alert-error">
      <% errors.forEach(error => { %>
        <p><%= error %></p>
      <% }); %>
    </div>
  <% } %>

  <% if (success && success.length) { %>
    <div class="alert alert-success">
      <% success.forEach(msg => { %>
        <p><%= msg %></p>
      <% }); %>
    </div>
  <% } %>

  <!-- Order Details -->
  <div class="order-details">
    <div class="detail-card">
      <h2>Order Details</h2>
      <div class="detail-row">
        <span class="label">Order Number:</span>
        <span class="value">#<%= order.order_id %></span>
      </div>
      <div class="detail-row">
        <span class="label">Order Date:</span>
        <span class="value"><%= new Date(order.order_date).toLocaleDateString() %></span>
      </div>
      <div class="detail-row">
        <span class="label">Status:</span>
        <span class="value status status-<%= order.status %>"><%= order.status.toUpperCase() %></span>
      </div>
      <div class="detail-row">
        <span class="label">Total Amount:</span>
        <span class="value total">$<%= parseFloat(order.total_amount).toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 }) %></span>
      </div>
    </div>

    <!-- Items Ordered -->
    <div class="detail-card">
      <h2>Items Ordered</h2>
      <table class="order-items">
        <thead>
          <tr>
            <th>Vehicle</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Subtotal</th>
          </tr>
        </thead>
        <tbody>
          <% order.items.forEach(item => { %>
            <tr>
              <td>
                <div class="item-info">
                  <img src="<%= item.inv_image %>" alt="<%= item.inv_make %>">
                  <div>
                    <strong><%= item.inv_year %> <%= item.inv_make %> <%= item.inv_model %></strong>
                  </div>
                </div>
              </td>
              <td>$<%= item.price_at_purchase.toLocaleString() %></td>
              <td><%= item.quantity %></td>
              <td>$<%= (item.price_at_purchase * item.quantity).toLocaleString() %></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>

    <!-- Shipping Information -->
    <div class="detail-card">
      <h2>Shipping Address</h2>
      <div class="address-info">
        <p><strong>Shipping Address:</strong></p>
        <p>Shipping address will be confirmed via email shortly.</p>
        <p class="confirmation-email">A confirmation email has been sent to your registered email address.</p>
      </div>
    </div>

    <!-- What's Next -->
    <div class="detail-card">
      <h2>What's Next?</h2>
      <div class="next-steps">
        <div class="step">
          <span class="step-number">1</span>
          <div class="step-content">
            <h3>Confirmation</h3>
            <p>Check your email for order confirmation and tracking details.</p>
          </div>
        </div>
        <div class="step">
          <span class="step-number">2</span>
          <div class="step-content">
            <h3>Processing</h3>
            <p>Your order will be processed and prepared for delivery.</p>
          </div>
        </div>
        <div class="step">
          <span class="step-number">3</span>
          <div class="step-content">
            <h3>Delivery</h3>
            <p>We'll send you tracking information once your order ships.</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Action Buttons -->
  <div class="confirmation-actions">
    <a href="/checkout/order-history" class="btn btn-primary">View Order History</a>
    <a href="/" class="btn btn-secondary">Continue Shopping</a>
  </div>
</div>

