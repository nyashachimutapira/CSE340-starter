<div class="checkout-container">
  <h1><%= title %></h1>

  <div class="checkout-content">
    <!-- Cart Summary -->
    <div class="cart-summary">
      <h2>Order Summary</h2>
      
      <% if (cartItems && cartItems.length > 0) { %>
        <div class="cart-items">
          <% cartItems.forEach(item => { %>
            <div class="cart-item">
              <div class="item-image">
                <img src="<%= item.inv_thumbnail %>" alt="<%= item.inv_year %> <%= item.inv_make %> <%= item.inv_model %>">
              </div>
              <div class="item-details">
                <h4><%= item.inv_year %> <%= item.inv_make %> <%= item.inv_model %></h4>
                <p>Quantity: <%= item.quantity %></p>
                <p>Price: $<%= parseFloat(item.inv_price).toLocaleString('en-US', {minimumFractionDigits: 2}) %></p>
                <p class="subtotal">Subtotal: $<%= (item.inv_price * item.quantity).toLocaleString('en-US', {minimumFractionDigits: 2}) %></p>
              </div>
            </div>
          <% }); %>
        </div>

        <div class="order-total">
          <h3>Total: $<%= parseFloat(total).toLocaleString('en-US', {minimumFractionDigits: 2}) %></h3>
        </div>
      <% } else { %>
        <p>Your cart is empty.</p>
      <% } %>
    </div>

    <!-- Shipping Form -->
    <div class="shipping-form">
      <h2>Shipping Address</h2>
      <form id="checkout-form" method="POST" action="/order/place">
        <div class="form-group">
          <label for="address">Street Address:</label>
          <input 
            type="text" 
            id="address" 
            name="address" 
            required
            placeholder="123 Main Street"
          >
        </div>

        <div class="form-row">
          <div class="form-group">
            <label for="city">City:</label>
            <input 
              type="text" 
              id="city" 
              name="city" 
              required
              placeholder="Your City"
            >
          </div>

          <div class="form-group">
            <label for="state">State:</label>
            <input 
              type="text" 
              id="state" 
              name="state" 
              required
              placeholder="CA"
            >
          </div>

          <div class="form-group">
            <label for="zip">ZIP Code:</label>
            <input 
              type="text" 
              id="zip" 
              name="zip" 
              required
              placeholder="12345"
            >
          </div>
        </div>

        <div class="form-group">
          <label for="phone">Phone Number:</label>
          <input 
            type="tel" 
            id="phone" 
            name="phone" 
            required
            placeholder="(555) 123-4567"
          >
        </div>

        <div class="form-actions">
          <button type="submit" class="btn btn-primary">Place Order</button>
          <a href="/cart" class="btn btn-secondary">Return to Cart</a>
        </div>
      </form>
    </div>
  </div>

  <!-- Toast container -->
  <div id="toast-container" aria-live="polite" aria-atomic="true"></div>
</div>

<style>
  .checkout-container {
    max-width: 1000px;
    margin: 0 auto;
    padding: 20px;
  }

  .checkout-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 30px;
    margin-top: 30px;
  }

  @media (max-width: 768px) {
    .checkout-content {
      grid-template-columns: 1fr;
    }
  }

  .cart-summary, .shipping-form {
    padding: 20px;
    border: 1px solid #ddd;
    border-radius: 5px;
    background: #f9f9f9;
  }

  .cart-summary h2, .shipping-form h2 {
    margin-top: 0;
  }

  .cart-items {
    margin-bottom: 20px;
    max-height: 400px;
    overflow-y: auto;
  }

  .cart-item {
    display: flex;
    gap: 15px;
    margin-bottom: 15px;
    padding-bottom: 15px;
    border-bottom: 1px solid #ddd;
  }

  .item-image {
    width: 80px;
    height: 80px;
    flex-shrink: 0;
    overflow: hidden;
    border-radius: 4px;
    background: #fff;
  }

  .item-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .item-details {
    flex: 1;
  }

  .item-details h4 {
    margin: 0 0 8px 0;
    font-size: 14px;
  }

  .item-details p {
    margin: 4px 0;
    font-size: 13px;
    color: #666;
  }

  .subtotal {
    font-weight: bold;
    color: #333;
  }

  .order-total {
    padding-top: 15px;
    border-top: 2px solid #ddd;
    text-align: right;
  }

  .order-total h3 {
    margin: 0;
    color: #28a745;
  }

  .form-group {
    display: flex;
    flex-direction: column;
    margin-bottom: 15px;
  }

  .form-row {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 15px;
  }

  @media (max-width: 600px) {
    .form-row {
      grid-template-columns: 1fr;
    }
  }

  .form-group label {
    margin-bottom: 5px;
    font-weight: bold;
    color: #333;
  }

  .form-group input {
    padding: 10px;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-size: 14px;
  }

  .form-group input:focus {
    outline: none;
    border-color: #007bff;
    box-shadow: 0 0 5px rgba(0, 123, 255, 0.3);
  }

  .form-actions {
    display: flex;
    gap: 10px;
    margin-top: 20px;
  }

  .btn {
    padding: 12px 24px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 14px;
    text-decoration: none;
    display: inline-block;
  }

  .btn-primary {
    background: #007bff;
    color: white;
    flex: 1;
  }

  .btn-primary:hover {
    background: #0056b3;
  }

  .btn-secondary {
    background: #6c757d;
    color: white;
  }

  .btn-secondary:hover {
    background: #5a6268;
  }

  /* Toast styles */
  #toast-container { position: fixed; top: 16px; right: 16px; z-index: 1050; }
  .toast-item {
    min-width: 220px;
    max-width: 360px;
    background: #fff;
    border: 1px solid #ccc;
    padding: 10px 12px;
    margin-bottom: 8px;
    border-radius: 6px;
    box-shadow: 0 2px 6px rgba(0,0,0,0.12);
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  .toast-item.success { border-color: #c3e6cb; background: #d4edda; }
  .toast-item.error { border-color: #f5c6cb; background: #f8d7da; }
  .toast-message { flex: 1; padding-right: 8px; }
  .toast-close { background: transparent; border: none; cursor: pointer; font-size: 16px; }
</style>

<script>
  function showToast(message, type = 'info', timeout = 5000) {
    const container = document.getElementById('toast-container');
    if (!container) return;
    const toast = document.createElement('div');
    toast.className = 'toast-item ' + (type === 'success' ? 'success' : (type === 'error' ? 'error' : ''));
    const msg = document.createElement('div');
    msg.className = 'toast-message';
    msg.textContent = message;
    const close = document.createElement('button');
    close.className = 'toast-close';
    close.innerHTML = '&times;';
    close.addEventListener('click', () => { if (toast.parentNode) toast.parentNode.removeChild(toast); });
    toast.appendChild(msg);
    toast.appendChild(close);
    container.appendChild(toast);
    setTimeout(() => { if (toast.parentNode) toast.parentNode.removeChild(toast); }, timeout);
  }

  document.getElementById('checkout-form').addEventListener('submit', async (e) => {
    e.preventDefault();

    const formData = new FormData(e.target);
    const data = Object.fromEntries(formData);

    try {
      const response = await fetch('/order/place', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data),
      });

      const result = await response.json();

      if (result.success) {
        showToast('Order placed successfully!', 'success');
        setTimeout(() => {
          window.location.href = result.redirect;
        }, 1000);
      } else {
        showToast(result.message || 'Error placing order', 'error');
      }
    } catch (error) {
      console.error('Error:', error);
      showToast('Error placing order. Please try again.', 'error');
    }
  });
</script>
