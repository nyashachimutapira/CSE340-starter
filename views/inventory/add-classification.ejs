<section class="form-wrapper">
  <h1>Add Classification</h1>
  <p>Classification names must not contain spaces or special characters.</p>

  <% if (errors && errors.length) { %>
    <div class="form-errors" role="alert">
      <p>Please fix the following:</p>
      <ul>
        <% errors.forEach((error) => { %>
          <li><%= error.msg %></li>
        <% }) %>
      </ul>
    </div>
  <% } %>

  <form class="form-card needs-validation" action="/inv/add-classification" method="post">
    <label for="classification_name">Classification Name</label>
    <input
      type="text"
      id="classification_name"
      name="classification_name"
      pattern="^[A-Za-z0-9]+$"
      minlength="3"
      required
      value="<%= classification_name ? classification_name : '' %>"
      aria-describedby="classificationHelp"
    >
    <small id="classificationHelp">Use letters and numbers only; no spaces or special characters.</small>

    <button type="submit">Save Classification</button>
  </form>
</section>

