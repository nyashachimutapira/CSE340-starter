<main>
  <h1>Add Review</h1>
  <% if (typeof errors !== 'undefined' && errors && errors.length) { %>
    <ul class="errors">
      <% errors.forEach(function(err) { %>
        <li><%= err.msg %></li>
      <% }) %>
    </ul>
  <% } %>

  <form action="/reviews/add" method="post">
    <input type="hidden" name="inv_id" value="<%= inv_id %>">

    <label for="rating">Rating</label>
    <select name="rating" id="rating" required>
      <option value="">Choose rating</option>
      <% for (let i = 1; i <= 5; i++) { %>
        <option value="<%= i %>" <%= (typeof rating !== 'undefined' && Number(rating) === i) ? 'selected' : '' %>><%= i %></option>
      <% } %>
    </select>

    <label for="review_text">Review</label>
    <textarea id="review_text" name="review_text" rows="6" maxlength="2000"><%= typeof review_text !== 'undefined' ? review_text : '' %></textarea>

    <div class="form-actions">
      <button type="submit" class="btn btn-primary">Submit Review</button>
      <a href="/inv/detail/<%= inv_id %>" class="btn btn-secondary">Cancel</a>
    </div>
  </form>
</main>
