<div class="admin-dashboard">
  <h1>Admin Dashboard</h1>
  
  <div class="dashboard-stats">
    <div class="stat-card">
      <div class="stat-number"><%= totalAccounts %></div>
      <div class="stat-label">Total Accounts</div>
    </div>
    
    <div class="stat-card">
      <div class="stat-number"><%= profileStats.profiles_created || 0 %></div>
      <div class="stat-label">Profiles Completed</div>
    </div>
    
    <div class="stat-card">
      <div class="stat-number"><%= profileStats.with_bio || 0 %></div>
      <div class="stat-label">Profiles with Bio</div>
    </div>
    
    <div class="stat-card">
      <div class="stat-number"><%= accountsByType.length %></div>
      <div class="stat-label">Account Types</div>
    </div>
  </div>

  <div class="dashboard-content">
    <div class="section full-width">
      <h2>Account Overview</h2>
      <table class="data-table">
        <thead>
          <tr>
            <th>Account Type</th>
            <th>Count</th>
            <th>Percentage</th>
          </tr>
        </thead>
        <tbody>
          <% accountsByType.forEach(type => { %>
            <tr>
              <td>
                <span class="badge badge-<%= type.account_type.toLowerCase() %>">
                  <%= type.account_type || 'Unknown' %>
                </span>
              </td>
              <td><%= type.count %></td>
              <td><%= ((type.count / totalAccounts) * 100).toFixed(1) %>%</td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>

    <div class="section">
      <h2>Profile Completion</h2>
      <div class="stat-box">
        <div class="stat-row">
          <span>Completed:</span>
          <span><strong><%= profileStats.profiles_created || 0 %></strong> / <%= totalAccounts %></span>
        </div>
        <div class="progress-bar">
          <div class="progress" style="width: <%= totalAccounts > 0 ? ((profileStats.profiles_created / totalAccounts) * 100) : 0 %>%"></div>
        </div>
        <div class="stat-row small">
          <span>With Bio:</span>
          <span><%= profileStats.with_bio || 0 %></span>
        </div>
        <div class="stat-row small">
          <span>With Phone:</span>
          <span><%= profileStats.with_phone || 0 %></span>
        </div>
        <div class="stat-row small">
          <span>With Address:</span>
          <span><%= profileStats.with_address || 0 %></span>
        </div>
        <div class="stat-row small">
          <span>With Picture:</span>
          <span><%= profileStats.with_picture || 0 %></span>
        </div>
      </div>
    </div>

    <div class="section">
      <h2>Activity Summary (Last 30 Days)</h2>
      <% if (activitySummary && activitySummary.length > 0) { %>
        <div class="activity-list">
          <% activitySummary.forEach(activity => { %>
            <div class="activity-item">
              <span class="action-badge"><%= activity.action_type %></span>
              <span class="action-count"><%= activity.count %> actions</span>
            </div>
          <% }); %>
        </div>
      <% } else { %>
        <p class="no-data">No admin activities recorded in the last 30 days.</p>
      <% } %>
    </div>

    <div class="section full-width">
      <h2>Recent Admin Activities</h2>
      <% if (recentActivities && recentActivities.length > 0) { %>
        <table class="data-table activity-table">
          <thead>
            <tr>
              <th>Date</th>
              <th>Admin</th>
              <th>Action</th>
              <th>Target</th>
              <th>Description</th>
            </tr>
          </thead>
          <tbody>
            <% recentActivities.forEach(activity => { %>
              <tr>
                <td><%= new Date(activity.created_at).toLocaleDateString() + ' ' + new Date(activity.created_at).toLocaleTimeString() %></td>
                <td><%= activity.account_firstname %> <%= activity.account_lastname %></td>
                <td><span class="action-badge"><%= activity.action_type %></span></td>
                <td><%= activity.target_type || '-' %></td>
                <td><%= activity.description || '-' %></td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      <% } else { %>
        <p class="no-data">No activities recorded.</p>
      <% } %>
      <div class="view-all">
        <a href="/admin/activity" class="btn btn-secondary">View All Activities</a>
      </div>
    </div>

    <div class="section full-width">
      <h2>Quick Actions</h2>
      <div class="actions-grid">
        <a href="/admin/users" class="action-button">
          <div class="action-icon">ðŸ‘¥</div>
          <div class="action-text">Manage Users</div>
        </a>
        <a href="/admin/activity" class="action-button">
          <div class="action-icon">ðŸ“Š</div>
          <div class="action-text">View Activity Log</div>
        </a>
      </div>
    </div>
  </div>
</div>

